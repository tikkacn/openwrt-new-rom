          find . -name "*sysupgrade*" -o -name "*combined*" -o -name "*.img.gz" | xargs -I {} cp {} generic/generic/firmware/ || true
          echo "FIRMWARE=$(pwd)/generic/generic/firmware" >> $GITHUB_ENV
          echo "status=success" >> $GITHUB_OUTPUT
